                    System.out.println("To book 4 seater with Ac Press 5:");
                    System.out.println("To book 1 seater  Non Ac Press 6:");
                    System.out.println("To book 2 seater  Non Ac Press 7:");
                    System.out.println("To book 4 seater Non Ac Press 8:");
                    System.out.println("To book Dormatory  Press 9:");
                    System.out.println("For exit  Press 0:");

                    System.out.println("Please press the button");
